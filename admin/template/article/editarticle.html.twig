{% extends "base.html.twig" %}
{% block body %}
    {{ url }}
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <form action="/admin/update-article" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="{{ article.0.id }}">
                <div class="form-group">
                    <label for="exampleFormControlInput1">title</label>
                    <input type="text" class="form-control" value="{{ article.0.title }}" name="title"
                           placeholder="title">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">author</label>
                    <input type="text" class="form-control" name="author" value="{{ article.0.author }}"
                           placeholder="author">
                </div>
                <div class="form-group">
                    <img src="../../img/{{ article.0.imagepath }}" alt="Ä°mage" width="100" height="100">
                    <input type="file" name="fileToUpload" id="fileToUpload">
                </div>
                <div class="form-group">
                    <select class="form-control select2" name="tags[]" multiple="multiple"
                            style="width: 100%;"></select>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Example textarea</label>
                    <textarea id="summernote" name="content">{{ article.0.content }}</textarea>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Example select</label>
                    <select class="form-control" name="categories">
                        {% for category in categories %}
                            <option>{{ category.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info"/>
                </div>
            </form>
        </div>
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>
    </div>
{% endblock %}
